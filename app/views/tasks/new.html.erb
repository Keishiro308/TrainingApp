<div class="container">
  <div class="col-sm-10 offset-sm-1">
    <%=form_with(model: @task, url: tasks_create_path, local: true) do |f| %>
    <form action="">
      <div class="field from-group">
        <%= f.label :name, '予定の名前' %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="field from-group">
        <%= f.label :start_time, '開始日時' %>
        <%= datetime_field('task','start_time', class:"form-control") %>
      </div>
      <div class="field from-group">
        <%= f.label :end_time, '終了日時' %>
        <%= datetime_field('task','end_time', class:"form-control") %>
      </div>
      <%= f.submit "予定を追加",class: "btn btn-primary"%>
    </form>
    <%end%>
  </div>
</div>
